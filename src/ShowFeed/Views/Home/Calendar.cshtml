@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "calendar";
}

<div class="page-header">
    <div class="pull-right form-inline">
        <div class="btn-group">
            <button class="btn btn-primary" data-calendar-nav="prev"><< Prev</button>
            <button class="btn" data-calendar-nav="today">Today</button>
            <button class="btn btn-primary" data-calendar-nav="next">Next >></button>
        </div>
        <div class="btn-group">
            <button class="btn btn-warning active" data-calendar-view="day">Week</button>
            <button class="btn btn-warning" data-calendar-view="month">Month</button>
        </div>
    </div>
    <h3>header</h3>
</div>

<div id="calendar"></div>

@section scripts {
    <script type="text/javascript">
        var options = {
            view: 'day',
            first_day: 1,
            tmpl_path: 'Content/tmpls/',
            events_source: function(start, end, timezone) {
                var offset = this.options.view == "day" ? 3 : 0;
                var params = {
                    from: relativeDay(new Date(start), -offset).getTime(),
                    to: relativeDay(new Date(end), offset).getTime()
                };

                var result = [];
                $.ajax({
                    type: "GET",
                    url: "@Url.HttpRouteUrl("api/calendar", null)",
                    data: params,
                    async: false,
                    success: function (json) {
                        result = json.result;
                    },
                    error: function (json) {
                        $.error(json.error);
                    }
                });

                return result;
            },

            onAfterViewLoad: function(view) {
                $('.page-header h3').text(this.getTitle());
                $('.btn-group button').removeClass('active');
                $('button[data-calendar-view="' + view + '"]').addClass('active');
            },
        };

        var calendar = $('#calendar').calendar(options);

        $('.btn-group button[data-calendar-nav]').each(function() {
            var $this = $(this);
            $this.click(function() {
                calendar.navigate($this.data('calendar-nav'));
            });
        });

        $('.btn-group button[data-calendar-view]').each(function() {
            var $this = $(this);
            $this.click(function() {
                calendar.view($this.data('calendar-view'));
            });
        });
    </script>
}
