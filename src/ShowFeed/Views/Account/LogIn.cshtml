@model ShowFeed.ViewModels.AccountLogInViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "log in";
}

<div class="page-header">
    <h3>Log In</h3>
</div>

<form class="form-horizontal" action="@Url.RouteUrl("login")" method="post">
    <div class="form-group">
        @Html.LabelFor(m => m.Username, new { @class = "col-md-offset-3 col-md-2 control-label" })
        <div class="col-md-4">
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Username" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-offset-3 col-md-2 control-label" })
        <div class="col-md-4">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
        </div>
    </div>
    <div class="col-md-offset-3 col-md-6">
        <button type="submit" class="btn btn-lg btn-primary btn-block">Log In</button>
    </div>
</form>
